<div class="container mt-5">
  <h3>投稿一覧</h3>
  <% if flash.notice.present? %>
    <%= flash.notice %>
  <% end %>
  <div>
   <%= link_to '新規登録', new_task_path, class: 'btn btn-primary' %>
  </div>

  <div class="col-md-8">
    <table class="table table-hover">
     <thead>
       <th>名前</th>
       <th>作成日</th>
       <th></th>
       <th></th>
     </thead>
     <% @tasks.each do |task| %>
     <tbody>
        
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-primary' %></td>
        <td><%= link_to '消去', task, method: :delete, date: { confirm: "タスク「#{task.name}」を消去します。よろしいですか？"}, class: 'btn btn-primary' %></td>
     </tbody>
     <% end %>
   </table>
  </div>
</div>